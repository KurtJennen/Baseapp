<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="true" default-lazy="false">
	<class name="be.luxuryoverdosis.framework.data.to.BatchJobParams" table="batch_job_params">
		<id name="id" column="Job_Instance_Id" type="long" unsaved-value="-1" />
		<property name="typeCode" column="Type_Cd" type="string" not-null="true"></property>
		<property name="keyName" column="Key_name" type="string" not-null="true"></property>
		<property name="stringValue" column="String_Val" type="string"></property>
		<property name="dateValue" column="Date_Val" type="timestamp"></property>
		<property name="longValue" column="Long_Val" type="long"></property>
		<property name="doubleValue" column="Double_Val" type="double"></property>
	</class>
	
	<query name="getAllJobParamsByJobInstance">
		from BatchJobParams bjp
		where bjp.id = :jobInstanceId
	</query>
	
	<query name="getAllJobParamsByJobInstanceAndKeyName">
		from BatchJobParams bjp
		where bjp.id = :jobInstanceId
		and bjp.keyName = :keyName
	</query>
</hibernate-mapping>